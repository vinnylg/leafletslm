{
  "name": "DrugSLM DevContainer",
  "dockerComposeFile": ["../compose.yaml"],
  "service": "dev",
  "runServices": ["dev"],
  "overrideCommand": true,
  "workspaceFolder": "/workspace",
  "customizations": {
    "vscode": {
      "extensions": [
        "aaron-bond.better-comments",
        "bierner.github-markdown-preview",
        "bierner.markdown-preview-github-styles",
        "bierner.markdown-yaml-preamble",
        "yzhang.markdown-all-in-one",
        // "yzane.markdown-pdf"
        "davidanson.vscode-markdownlint",
        "charliermarsh.ruff",
        "eamodio.gitlens",
        "esbenp.prettier-vscode",
        "gruntfuggly.todo-tree",
        "ms-python.debugpy",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.vscode-python-envs",
        "ms-toolsai.datawrangler",
        "ms-toolsai.jupyter-keymap",
        "ms-toolsai.jupyter-renderers",
        "ms-toolsai.jupyter",
        "ms-toolsai.vscode-jupyter-cell-tags",
        "ms-toolsai.vscode-jupyter-slideshow",
        "njpwerner.autodocstring",
        "pascalreitermann93.vscode-yaml-sort",
        "plibither8.remove-comments",
        "redhat.vscode-yaml",
        "richie5um2.vscode-sort-json",
        "tamasfe.even-better-toml",
        "tomoki1207.pdf",
        "tyriar.sort-lines",
        "oderwat.indent-rainbow"
      ],

      "settings": {
        "settingsSync.ignoredExtensions": true,
        "[python]": {
          "editor.formatOnSave": true,
          "editor.defaultFormatter": "charliermarsh.ruff",
          "python.defaultInterpreterPath": ".venv/bin/python",
          "python.terminal.activateEnvironment": true,
          "python.analysis.diagnosticMode": "workspace"
        },

        "[markdown]": {
          "editor.formatOnSave": false
        },

        "markdownlint.config": {
          "MD033": false,
          "MD041": false
        },

        "markdown.suggest.paths.includeWorkspaceRoot": false,
        "markdown.editor.filePaste.enabled": "smart",

        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
        "files.autoSave": "onFocusChange",

        // Preferências de Indentação e Guias Visuais
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.detectIndentation": true,
        "editor.rulers": [80, 120],

        // Preferências de Aparência e UI
        "editor.fontFamily": "Fira Code, Cascadia Code, Consolas, 'Courier New', monospace",
        "editor.fontLigatures": true,
        "editor.fontSize": 14,
        "editor.lineHeight": 16,
        "editor.bracketPairColorization.enabled": true,
        "editor.guides.bracketPairs": true,
        "editor.guides.indentation": true,
        "editor.guides.highlightActiveIndentation": true,
        "editor.minimap.enabled": true,
        "breadcrumbs.enabled": false,

        // Preferências de Comportamento do Editor
        "editor.cursorBlinking": "smooth",
        "editor.cursorSmoothCaretAnimation": "on",
        "editor.scrollBeyondLastLine": true,
        "editor.inlineSuggest.enabled": false,

        // Configurações do Terminal Integrado
        "terminal.integrated.fontFamily": "Fira Code, Cascadia Code, monospace",
        "terminal.integrated.fontSize": 14,

        // Configurações do Jupyter e Notebooks
        "notebook.output.scrolling": true,
        "jupyter.themeMatplotlibPlots": true,
        "jupyter.widgetScriptSources": ["unpkg.com", "jsdelivr.com"],
        "notebook.markup.fontSize": 12,

        "jupyter.askForKernelRestart": false,
        // "jupyter.noDefaultKernel": true,
        "jupyter.interactiveWindow.defaultKernel": ".venv",
        "jupyter.sendSelectionToInteractiveWindow": true,
        "jupyter.showKernelSelectionOnNonPythonWindow": false,

        "jupyter.kernels.filter": [], // Kernels para esconder

        // Exclusão de arquivos na barra lateral
        "files.exclude": {
          "**/.DS_Store": true,
          "**/.git": true,
          "**/.hg": true,
          "**/.svn": true,
          "**/CVS": true,
          "**/Thumbs.db": true,
          "**/build": true,
          "**/dist": true,
          "**/node_modules": true,
          "**/.csv": true,
          "**/.parquet": true,
          "**/.pkl": true,
          "**/.xls": true
        },

        // Exclusão do vigia para esses arquivos
        "files.watcherExclude": {
          "**/.csv": true,
          "**/.parquet": true,
          "**/.pkl": true,
          "**/.xls": true,
          "**/__pycache__": true,
          "**/.venv": true
        },

        // Desativa o Github Copilot neste ambiente
        "github.copilot.enable": {
          "*": false
        },

        "editor.stickyScroll.enabled": false,
        "terminal.integrated.stickyScroll.enabled": false,

        "workbench.tree.indent": 24,
        "workbench.tree.renderIndentGuides": "always",
        "explorer.compactFolders": false,

        "terminal.integrated.suggest.enabled": false,

        // --- Correções e Sugestões Genéricas ---
        "extensions.ignoreRecommendations": true,
        "extensions.autoCheckUpdates": false,
        "zenMode.silentNotifications": true,

        // --- Novas configurações de silenciamento ---
        // Desativa banners de "Deseja instalar a extensão recomendada para arquivos .XYZ?"
        "workbench.extensions.actionButton.show": "none",

        // Silencia notificações de progresso em segundo plano (ajuda com o "Installing...")
        "notification.displayMode": "none",

        // Evita que o VS Code abra o terminal ou dê foco em saídas de log sozinho
        "presentation.reveal": "never",
        "workbench.panel.opensMaximized": "never",

        // Desativa avisos de "Esta pasta contém arquivos que podem ser perigosos" (Trust)
        "security.workspace.trust.enabled": false,

        // Impede que o VS Code tente "ajudar" com atualizações de ferramentas de linguagem
        "go.toolsManagement.autoUpdate": false,
        "python.analysis.diagnosticPublishDelay": 1000,
        "html.suggest.html5": true,
        "update.showReleaseNotes": false
      }
    }
  }
}
