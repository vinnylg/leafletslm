# Desired subdomain name (e.g., 'myservice' becomes 'myservice.tailnet.ts.net')
TS_HOSTNAME=my-service-name

# Path to the funnel JSON config inside the container (must match the volume mount)
TS_SERVE_CONFIG=/config/server.json

# Auth key from Admin Console (Must be Reusable and not Ephemeral)
TS_AUTHKEY=tskey-auth-replace-me

# Required tags to prevent key expiration and assign ACL ownership
TS_EXTRA_ARGS=--advertise-tags=tag:container

# Ephemeral mode: Automatically removes the node when it goes offline.
# Allows reusing the hostname on different machines without syncing state files.
TS_EPHEMERAL=true
